<Window x:Class="u2SebastianFishingHole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u2SebastianFishingHole"
        mc:Ignorable="d"
        Title="Enter Trout, Pike and Pickerel and Maximum Points" Height="350" Width="525">
    <ScrollViewer>
        <StackPanel x:Name="myStackPanel">
            <TextBox x:Name="txtInput"
                 Text=""
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 />
            <Button x:Name="btnClick"
                Click="calculateFishCombos"
                Content="Find Combinations"
                Height="25"
                />
            <Label x:Name="lblOutput"
               Content="Output"
               />
        </StackPanel>
    </ScrollViewer>
</Window>

